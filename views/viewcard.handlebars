

    <div class="card">
        <a href="/cards/{{id}}"><h3>{{event_name}}</h3></a>
        <p>{{event_description}}</p>
        <h6>{{event_date}}</h6>
        <h6>{{event_time}}</h6>
        <h6>{{user.username}}</h6>
        {{#each comments}}
        <p>{{content}}</p>
        {{/each}}
        <form id="newCommentForm">
            <textarea id="newComment" placeholder="Add a Comment"></textarea>
            <button>Add Comment</button>
        </form>
        <button class="entryDelBtn" data-id={{id}}>Delete</button>
    </div>
